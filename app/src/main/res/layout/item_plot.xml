<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="215dp"
        app:cardCornerRadius="20dp"
        >
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/plus"/>
                    <TextView
                        android:id="@+id/tvPlotName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="madhuban"
                        android:textColor="@color/black"
                        android:fontFamily="@font/urbanist_bold"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout

                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/plus"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvFarmName"
                            android:text="farmname"
                            android:fontFamily="@font/urbanist_regular"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/plus"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvSoilType"
                            android:text="location"
                            android:textColor="@color/black"
                            android:fontFamily="@font/urbanist_regular"
                            android:layout_gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout

                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/plus"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTotalFarmArea"
                            android:text="10 Acers"
                            android:fontFamily="@font/urbanist_regular"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/plus"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvPlotArea"
                            android:text="5 Acers"
                            android:textColor="@color/black"
                            android:fontFamily="@font/urbanist_regular"
                            android:layout_gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout

                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/plus"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvLocation"
                            android:text="10 Acers"
                            android:fontFamily="@font/urbanist_regular"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            />

                    </LinearLayout>



                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/borderline"
                    />
            </LinearLayout>


        </FrameLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
