                        android:layout_height="wrap_content"
                        android:text="17 Oct 2023  "
                        android:drawableEnd="@drawable/editpencile"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/celebes_semi_bold"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(~60 Days)"
                    android:textSize="10sp"
                    android:textColor="#8a8a8a"
                    android:fontFamily="@font/celebes_reguler"

                    />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginStart="15dp"
            android:id="@+id/view4"
            android:layout_width="10dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_done_line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View
                    android:id="@+id/view5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_done"
